<Window x:Class="DiscordStatusRotator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Discord Status Rotator" Height="350" Width="525">
    <Grid Margin="10,0,0,0">
        <TextBox x:Name="StatusInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10"/>
        <Button Content="Add Status" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="220,10,0,0" Click="AddStatus"/>
        <ListBox x:Name="StatusListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="150" Margin="10,50,10,0"/>
        <TextBox x:Name="IntervalInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,210,0,0"/>
        <Button Content="Save Config" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="120,210,0,0" Click="SaveConfig"/>
        <Button Content="Set Token" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="230,210,0,0" Click="SetToken"/>
        <Button Name="StartStopButton" Content="Start Rotation" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="335,210,0,0" Click="ToggleRotation"/>
    </Grid>
</Window>
